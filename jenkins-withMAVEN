pipeline {
    agent any
	
	tools{
	
	    maven "M3"
	}
	
	stages{
	    stage('Build'){
		environment{
		ANYPOINT_CREDENTIALS = credentials('wp.anypoint.credentials')
		}
		steps{
		withMaven(maven: 'Maven 3.8.4') {
		sh "mvn clean install deploy -DmuleDeploy -Dusername=${ANYPOINT_CREDENTIALS_USR} -Dpassword=${ANYPOINT_CREDENTIALS_psw} -Denvironment=Sandbox -DworkerType=MICRO -Dworkers=1 -Dregion=us-west-2"
		
		}
	}
}
}
}
